
<MCard>
    <MImage></MImage>
    <MCardTitle>@Value.Name</MCardTitle>
    <MListItemGroup>
        @foreach(var item in @Value.Admins)
        {
            <MListItem>
                <MImage Src="@item.Avatar" />
                 @item.DisplayName
            </MListItem>
        }
    </MListItemGroup>
    <MListItemGroup>
        <MListItem>监测项目：@Value.ProjectTotal</MListItem>
        <MListItem>监测应用：@Value.AppTotal</MListItem>
    </MListItemGroup>
    <MLabel>@Value.Description</MLabel>
</MCard>

@code {
    [Parameter]
    public TeamDto Value { get; set; } = default!;
}
