@namespace Masa.Tsc.Admin.Rcl.Pages.Components
@inherits TscComponentBase

<MCard Class="@($"{Class} {_classs}")">
    @foreach (var item in Value)
    {
        <MRow Class="my-1 d-flex">
            <MLabel Class="blue-grey lighten-3 text-subtitle-2">@item.Key : </MLabel>
            @if (@item.Value is IEnumerable<KeyValuePair<string, object>> obj)
            {
                <TscKeyValue Value=obj />
            }
            else if (@item.Value is IEnumerable<object> objs)
            {
                <TscValueArray Value=objs />
            }
            else
            {
                <MLabel Class="@(WordBreak?"text-wrap text-body-1":"text-no-wrap text-body-1")">@item.Value</MLabel>
            }
        </MRow>
    }
</MCard>
@code
{
    private string _classs = "pa-0 ma-0";

    [Parameter]
    public IEnumerable<KeyValuePair<string, object>> Value { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public bool WordBreak { get; set; }
}